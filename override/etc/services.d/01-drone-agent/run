#!/usr/bin/with-contenv bash

if [[ -e /mnt/config/etc/drone-server/config ]]; then
  . /mnt/config/etc/drone-server/config
fi

SSLPRIMARY=`echo $SSLDOMAINS | tr ',' ' ' | awk '{print $1}'`

export DRONE_RUNNER_OS=${DRONE_RUNNER_OS:-"linux"}
export DRONE_RUNNER_ARCH=${DRONE_RUNNER_ARCH:-"amd64"}
export DRONE_RUNNER_NAME=$(hostname)}

export DRONE_RPC_PROTO=${DRONE_RPC_PROTO:-"${DRONE_SERVER_PROTO}"}
export DRONE_RPC_HOST=${DRONE_RPC_HOST:-"${DRONE_SERVER_HOST}"}

if [[ ! -z "${DRONE_RPC_SECRET}" && ! -z "${DRONE_RPC_HOST}" && -z "${DRONE_AGENT_DISABLED}" ]]; then
  exec s6-setuidgid guardian /usr/bin/drone-agent
else
  sleep 30
fi